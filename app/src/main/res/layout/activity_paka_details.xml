<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:backgroundTint="@android:color/white"
    android:backgroundTintMode="src_over"
    android:isScrollContainer="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.elad.gamaepsilonapp.AddPakaPage"
    tools:targetApi="lollipop">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="1136dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo"
        tools:ignore="ContentDescription,MissingConstraints" />


    <TextView
        android:id="@+id/pakaDetailsText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:text="@string/details_text"
        android:textColor="@android:color/black"
        android:textDirection="firstStrongRtl"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/logoImage"
        android:layout_alignStart="@+id/logoImage" />


    <TextView
        android:id="@+id/pakaNumberText"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/supervisorText"
        android:layout_alignStart="@+id/addressText"
        android:background="@drawable/edittext_drawable"
        android:ems="10"
        android:gravity="right"
        android:textDirection="firstStrongRtl"
        tools:ignore="LabelFor,RtlHardcoded,TextFields" />

    <TextView
        android:id="@+id/addressText"
        android:layout_width="420dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/teamLeaderText"
        android:layout_below="@+id/supervisorText"
        android:layout_marginTop="24dp"
        android:background="@drawable/edittext_drawable"
        android:ems="10"
        android:gravity="right"
        android:textDirection="firstStrongRtl"
        tools:ignore="LabelFor,RtlHardcoded" />

    <TextView
        android:id="@+id/classText"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/periortyText"
        android:layout_alignBottom="@+id/periortyText"
        android:layout_toEndOf="@+id/periortyText"
        android:background="@drawable/edittext_drawable"
        android:ems="10"
        android:gravity="right"
        android:textDirection="firstStrongRtl"
        tools:ignore="LabelFor,MissingConstraints,RtlHardcoded"
        tools:layout_editor_absoluteX="584dp"
        tools:layout_editor_absoluteY="204dp" />

    <TextView
        android:id="@+id/openOrCloseText"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_drawable"
        android:gravity="right"
        android:textDirection="firstStrongRtl"
        tools:ignore="RtlHardcoded"
        android:layout_below="@+id/pakaDetailsText"
        android:layout_alignEnd="@+id/pakaCommitText" />

    <TextView
        android:id="@+id/tatOrNotText"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/classText"
        android:layout_alignBottom="@+id/classText"
        android:layout_toEndOf="@+id/classText"
        android:background="@drawable/edittext_drawable"
        android:gravity="right"
        android:textDirection="firstStrongRtl"
        tools:ignore="MissingConstraints,RtlHardcoded" />

    <ListView
        android:id="@+id/teamLeaderText"
        android:layout_width="240dp"
        android:layout_height="280dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/workersListViewText"
        android:background="@drawable/edittext_drawable" />

    <TextView
        android:id="@+id/supervisorText"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/pakaDetailsText"
        android:layout_toEndOf="@+id/pakaNumberText"
        android:background="@drawable/edittext_drawable" />

    <TextView
        android:id="@+id/periortyText"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/addressText"
        android:layout_alignBottom="@+id/addressText"
        android:layout_toEndOf="@+id/addressText"
        android:background="@drawable/edittext_drawable"
        android:ems="10"
        android:gravity="right"
        android:textDirection="firstStrongRtl"
        tools:ignore="LabelFor,RtlHardcoded" />

    <TextView
        android:id="@+id/openDateText"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_drawable"
        android:ems="10"
        android:focusable="false"
        android:gravity="right"
        android:textDirection="firstStrongRtl"
        tools:ignore="LabelFor,RtlHardcoded"
        android:layout_below="@+id/pakaDetailsText"
        android:layout_toEndOf="@+id/supervisorText" />

    <TextView
        android:id="@+id/makingDateText"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_drawable"
        android:ems="10"
        android:focusable="false"
        android:gravity="right"
        android:textDirection="firstStrongRtl"
        tools:ignore="LabelFor,RtlHardcoded"
        android:layout_below="@+id/pakaDetailsText"
        android:layout_toEndOf="@+id/openDateText" />

    <TextView
        android:id="@+id/closingDateText"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_drawable"
        android:ems="10"
        android:focusable="false"
        android:gravity="right"
        android:textDirection="firstStrongRtl"
        tools:ignore="LabelFor,RtlHardcoded"
        android:layout_below="@+id/pakaDetailsText"
        android:layout_toStartOf="@+id/backToOpenPakaPage"
        android:layout_marginEnd="24dp" />

    <TextView
        android:id="@+id/profitSumText"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@+id/addressText"
        android:layout_toEndOf="@+id/addressText"
        android:background="@drawable/edittext_drawable"
        android:ems="10"
        android:gravity="right"
        android:textDirection="firstStrongRtl"
        tools:ignore="LabelFor,RtlHardcoded" />

    <TextView
        android:id="@+id/pakaCommitText"
        android:layout_width="245dp"
        android:layout_height="317dp"
        android:layout_above="@+id/backToOpenPakaPage"
        android:layout_alignEnd="@+id/backToOpenPakaPage"
        android:background="@drawable/edittext_drawable"
        android:ems="10"
        android:gravity="top|center"
        android:textDirection="firstStrongRtl" />

    <ListView
        android:id="@+id/workersListViewText"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/worksListViewText"
        android:background="@drawable/edittext_drawable" />

    <Button
        android:id="@+id/backToOpenPakaPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_red_light"
        android:textStyle="bold"
        android:text="@string/back_button6"
        tools:ignore="UnknownIdInLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/logoImage" />

    <ListView
        android:id="@+id/worksListViewText"
        android:layout_width="355dp"
        android:layout_height="280dp"
        android:background="@drawable/edittext_drawable"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/pakaCommitText" />

</RelativeLayout>
