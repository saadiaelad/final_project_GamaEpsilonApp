<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/supervisorNameText"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginEnd="15dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/workPlaceText" />

    <TextView
        android:id="@+id/workPlaceText"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/editImageButton"
        android:layout_marginEnd="18dp" />

    <ImageButton
        android:id="@+id/deleteImageButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:contentDescription="@string/delete_image_button"
        android:textStyle="bold"
        app:srcCompat="@android:drawable/ic_menu_delete"
        android:layout_marginEnd="151dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/editImageButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:contentDescription="@string/edit_image_button"
        android:textStyle="bold"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/deleteImageButton"
        android:layout_marginEnd="35dp" />

</RelativeLayout>