<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_open_paka_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.elad.gamaepsilonapp.OpenPakaPage"
    android:background="@android:color/white">

    <ListView
        android:id="@+id/pakaNumberListView"
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:layout_above="@+id/signOutButton"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pakaNumberTextView"
        android:background="@drawable/edittext_drawable"/>

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/logo"
        android:id="@+id/logo"
        android:layout_height="150dp"
        tools:ignore="ContentDescription"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_marginTop="156dp"
        android:id="@+id/addPakaButton"
        android:backgroundTint="@android:color/white"
        android:tint="@android:color/holo_red_light"
        tools:ignore="ContentDescription,UnusedAttribute"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginRight="430dp"
        android:layout_marginTop="220dp"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <Button
        android:text="@string/sign_out_butt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signOutButton"
        android:backgroundTint="@android:color/holo_red_light"
        tools:ignore="UnusedAttribute"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <Button
        android:text="@string/back_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButton"
        android:backgroundTint="@android:color/holo_red_light"
        tools:ignore="UnusedAttribute"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/signOutButton"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pakaNumberTextView"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_drawable"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/nameText"
        android:gravity="center"
        android:text="מספר פקע" />

    <ListView
        android:id="@+id/addressListView"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@+id/pakaNumberTextView"
        android:layout_toEndOf="@+id/pakaNumberListView"
        android:layout_alignBottom="@+id/pakaNumberListView"
        android:background="@drawable/edittext_drawable"/>

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_drawable"
        android:layout_alignTop="@+id/pakaNumberTextView"
        android:layout_toEndOf="@+id/pakaNumberListView"
        android:gravity="center"
        android:text="כתובת" />
</RelativeLayout>
